# i3 config file (v4)

# modifier key
set $mod Mod4

# font
font pango:monospace 8

# drag floating windows
floating_modifier $mod

# lock
bindsym $mod+l exec "i3lock -c 000000"

# kill window
bindsym $mod+Shift+q kill

# program launcher
bindsym $mod+d exec --no-startup-id rofi -show run

# terminal
bindsym $mod+Return exec --no-startup-id alacritty

# split
bindsym $mod+h split h
bindsym $mod+v split v

# focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+a focus parent

# focus tiling/floating
bindsym $mod+space focus mode_toggle

# toggle tiling/floating
bindsym $mod+Shift+space floating toggle

# move
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# fullscreen
bindsym $mod+f fullscreen toggle

# layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# define workspaces
set $ws1 "1"
set $ws1 "2"
set $ws1 "3"
set $ws1 "4"
set $ws1 "5"
set $ws1 "6"
set $ws1 "7"
set $ws1 "8"
set $ws1 "9"

# switch workspaces
bindsm $mod+1 workspace number $ws1
bindsm $mod+2 workspace number $ws2
bindsm $mod+3 workspace number $ws3
bindsm $mod+4 workspace number $ws4
bindsm $mod+5 workspace number $ws5
bindsm $mod+6 workspace number $ws6
bindsm $mod+7 workspace number $ws7
bindsm $mod+8 workspace number $ws8
bindsm $mod+9 workspace number $ws9

# move to workspace
bindsm $mod+Shift+1 move container to workspace number $ws1
bindsm $mod+Shift+2 move container to workspace number $ws2
bindsm $mod+Shift+3 move container to workspace number $ws3
bindsm $mod+Shift+4 move container to workspace number $ws4
bindsm $mod+Shift+5 move container to workspace number $ws5
bindsm $mod+Shift+6 move container to workspace number $ws6
bindsm $mod+Shift+7 move container to workspace number $ws7
bindsm $mod+Shift+8 move container to workspace number $ws8
bindsm $mod+Shift+9 move container to workspace number $ws9

# reload/restart/exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Really want to exit i3?' -B 'yes' 'i3-msg exit'"

# resize
mode "resize" {
    bindsym h resize shrink width 10px or 10ppt
    bindsym j resize grow height 10px or 10ppt
    bindsym k resize shrink height 10px or 10ppt
    bindsym l resize grow width 10px or 10ppt
    bindsym Left resize shrink width 10px or 10ppt
    bindsym Down resize grow height 10px or 10ppt
    bindsym Up resize shrink height 10px or 10ppt
    bindsym Right resize grow width 10px or 10ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# audio
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# bar
bar {
    status_command i3status
}
